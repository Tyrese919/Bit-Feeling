<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bitLightBlue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/border" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/arima_madurai_thin"
            android:gravity="center_horizontal"
            android:text="@string/app_name"
            android:textColor="@color/bitWhite"
            android:textSize="36sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/loginStudent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="65dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/border"
        android:fontFamily="@font/arima_madurai_thin"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="Login as: Student"
        android:textColor="@color/bitWhite"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/loginTeacher"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="65dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/border"
        android:fontFamily="@font/arima_madurai_thin"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="Login as: Teacher"
        android:textColor="@color/bitWhite"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/registerStudent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="65dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/border"
        android:fontFamily="@font/arima_madurai_thin"
        android:gravity="center_horizontal"
        android:text="Register as: Student"
        android:textColor="@color/bitWhite"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/registerTeacher"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="65dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/border"
        android:fontFamily="@font/arima_madurai_thin"
        android:gravity="center_horizontal"
        android:text="Register as: Teacher"
        android:textColor="@color/bitWhite"
        android:textSize="24sp"
        android:textStyle="bold" />

</LinearLayout>